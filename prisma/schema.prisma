generator client {
  provider = "prisma-client-js"
  //  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model student {
  id  Int @id @default(autoincrement())
  firstName        String 
  lastName String 
  major String 
  faculty String 
  email String @unique
  phone String 
  createdAt   DateTime @default(now()) 
  updatedAt   DateTime @default(now()) 


}


model User { 
id        String   @id @default(uuid())      // primary key แบบ UUID ช่วยป้องกันการเดา id ง่ายๆ 
username  String   @unique
password  String                              // เก็บเฉพาะรหัสผ่านที่ 'hash' แล้วเท่านั้น 
role String   @default("user")          // "user" หรือ "admin" ใช้สําหรับ RBAC 
createdAt DateTime @default(now())           // บันทึกเวลาสร้าง 
updatedAt DateTime @updatedAt
} 